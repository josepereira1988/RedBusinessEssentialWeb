@model Entidades.Usuarios.Usuarios

@{
    ViewData["Title"] = "Editar Usuario";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Editar: @Model.Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="CreateAt" />
            <input type="hidden" asp-for="UpdateAt" />
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class="form-control" value="@Model.Senha"/>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg active"/> 
                | <a class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

</body>
</html>
