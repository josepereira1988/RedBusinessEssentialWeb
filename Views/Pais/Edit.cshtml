@model Entidades.Logadouro.Pais

@{
    ViewData["Title"] = "Editar pais";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Editar: @Model.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="CreateAt" />
            <input type="hidden" asp-for="UpdateAt" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CdSis" class="control-label"></label>
                <input asp-for="CdSis" class="form-control"/>
                <span asp-validation-for="CdSis" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg active"/> 
                | <a class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

</body>
</html>
